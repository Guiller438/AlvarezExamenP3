<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlvarezExamenProgreso3.AlvarezViews.AlvarezVistaPrincipal"
             Title="Bienvenido a un mundo de gatos, Mr. Alvarez">

    <Grid BackgroundColor="#3498DB">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image x:Name="gatosImage" Aspect="AspectFill" Source="cat_image.jpg"/>

        <!-- Botones debajo de la imagen -->
        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="Guardar" Clicked="GuardarButton_Clicked"/>
            <Button Text="Quiero otro gato" Clicked="OtroGatoButton_Clicked"/>
        </StackLayout>
    </Grid>

</ContentPage>
